<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aplikasi data kendaraan</title>
    <link rel="stylesheet" href="style.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>
    <div class="container-md border border-primary p-5">
        <!-- nav -->
        <div class="container-lg">
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
                <div class="container-fluid">
                    <a class="navbar-brand primary" href="#">Aplikasi data keendaraan</a>
                </div>
            </nav>
        </div>
        <!-- nav -->

        <div class="container overflow-hidden sm-4">
            <form action="/tambah" method="post">
                <div class="row gy-5">
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="no" class="col-sm-2 col-form-label"> NO Registrasi</label>
                            <input type="text" name="no" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="nama" class="col-sm-2 col-form-label">Nama Pemilik</label>
                            <input type="text" name="nama" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="merk" class="col-sm-2 col-form-label">Merk kendaraan</label>
                            <input type="text" name="merk" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="tahun" class="col-sm-2 col-form-label">Tahun Pembuatan</label>
                            <input type="text" name="tahun" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="cc" class="col-sm-2 col-form-label">Kapasitas silinder</label>
                            <input type="text" name="cc" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="warna" class="col-sm-2 col-form-label">Warna kendaraan</label>
                            <input type="text" name="warna" class=" form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border bg-light">
                            <label for="bakar" class="col-sm-2 col-form-label">Bahan Bakar</label>
                            <input type="text" name="bakar" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-sm-2 float-end">
                    <input type="submit" class="btn btn-primary" value="Kembali">
                    <a href="">
                        <input type="submit" name="tambah" class="btn btn-primary" value="Tambah">
                    </a>

                </div>
            </form>
        </div>

        <!-- form -->
        <!-- table -->
        <div class="container-sm flex-wrap">
            <table class="table caption-top style-red">
                <h2>
                    <%= title %>
                </h2>
                <caption></caption>
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">No Registrasi</th>
                        <th scope="col">Nama Pemilik</th>
                        <th scope="col">Merk Kendaraan</th>
                        <th scope="col">Tahun Pembuatan</th>
                        <th scope="col">Kapasitas</th>
                        <th scope="col">Warna</th>
                        <th scope="col">Bahan Bakar</th>
                        <th scope="col">action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let user of users){%>
                        <tr>
                            <th scope="row">
                                <%= user.id%>
                            </th>
                            <td>
                                <%= user.no %>
                            </td>
                            <td>
                                <%= user.nama %>
                            </td>
                            <td>
                                <%= user.merk %>
                            </td>
                            <td>
                                <%= user.tahun %>
                            </td>
                            <td>
                                <%= user.kapasitas %>
                            </td>
                            <td>
                                <%= user.warna %>
                            </td>
                            <td>
                                <%= user.bahanbakar %>
                            </td>
                            <td class="flex-wrap">
                                <button type="submit" name="detail" value="detail"
                                    class="btn btn-primary sm-2 mr-2">detail</button>

                                <button type="submit" name="ubah" value="ubah"
                                    class="btn btn-danger sm-2 mr-2">ubah</button>

                                <button type="submit" name="hapus" value="hapus"
                                    class="btn btn-danger sm-2 mr-2">Hapus</button>
                            </td>


                            <% } %>
                        </tr>

                </tbody>
            </table>
            <!-- table -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>